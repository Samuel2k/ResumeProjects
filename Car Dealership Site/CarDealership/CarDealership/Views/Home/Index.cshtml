@model CarDealership.Models.Classes.View_Model_Classes.HomeIndexVM
@{
    ViewBag.Title = "Home Page";
}
<header>
    <div class="container">
        <div class="jumbotron">
            <div class="carousel slide" data-ride="carousel" id="page-carousel">
                <div class="carousel-inner">
                    <div class="item active">
                        <h2>Welcome to GuildCars!</h2>
                        <p>We hope you can find the vehicle you are looking for today.</p>
                    </div>
                    @foreach (var item in Model.Specials)
                    {
                        <div class="item" id="@item.SpecialId">
                            <h3>@item.SpecialTitle</h3>
                            <p>@item.SpecialDescription</p>
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#page-carousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#page-carousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <hr />
</header>

<body style="padding-bottom: 50px">
    <h2>Featured Vehicles</h2>
    <br />
    @foreach (var item in Model.VehicleVMs)
    {
        <div class="col-md-3" id="@item.Vehicle.VehicleId">
            <div class="card" style="border: 2px solid black; text-align: center; height: 165px; width: 175px">
                <img class="img-thumbnail" src="@item.Vehicle.Picture">
                <div class="card-body">
                    <h5 class="card-title">@item.Model.ModelYear @item.Make.MakeName @item.Model.ModelName</h5>
                </div>
            </div>
        </div>
    }
    <br />
</body>